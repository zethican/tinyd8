<form class="{{cssClass}}" autocomplete="off">
    {{> "systems/tinyd8/templates/partials/item-header.hbs" placeholder='tinyd8.armor.name'}}
    <table>
        <tr>
            <th class="text-nowrap">{{localize 'tinyd8.armor.type'}}</th>
            <th class="text-nowrap">{{localize 'tinyd8.armor.damageReduction'}}</th>
            <th class="text-nowrap">{{localize 'tinyd8.armor.slots'}}</th>
        </tr>
        <tr>
            <td>
                <select name="system.group">
                    {{selectOptions config.armorTypes selected=data.system.group localize="true"}}
                </select>
            </td>
            <td>
                <input type="text" class="text-center" name="system.damageReduction" value="{{data.system.damageReduction}}" data-dtype="Number"/>
            </td>
            <td>
                <input type="text" class="text-center" name="system.slots" value="{{data.system.slots}}" data-dtype="Number"/>
            </td>
        </tr>
    </table>
    {{editor descriptionHTML target="system.description" button=true owner=owner editable=editable}}
</form>
